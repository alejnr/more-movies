<%- include('partials/header') -%>

<div class="image-wrap">
  <div class="img-content">
    <img src="<%= image + requestedTrendingMovieBackdropImage %>" alt="" />
  </div>
  <div class="overlay"></div>
</div>
<div class="banner-content">
  <div>
    <div class="row no-gutters">
      <div class="col-md-4">
        <img
          src="<%= image + requestedTrendingMoviePosterImage %>"
          class="card-img poster"
          alt="<%= requestedTrendingMovieName %><%= requestedTrendingMovieTitle %>"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <a
            target="_blank"
            href="https://www.google.com/search?q=<%= requestedTrendingMovieName %><%= requestedTrendingMovieTitle %> film"
          >
            <h1 class="card-title">
              <%= requestedTrendingMovieName %><%= requestedTrendingMovieTitle
              %>
            </h1>
          </a>
          <p class="card-text text-left"><%= trendingOverview %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
